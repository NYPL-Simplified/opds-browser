{
  "name": "opds-browser",
  "version": "0.0.4",
  "description": "OPDS browser",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/opds-browser.git"
  },
  "author": "NYPL",
  "license": "Apache-2.0",
  "scripts": {
    "test": "tslint -c tslint.json src/*.ts src/*.tsx src/**/*.ts src/**/*.tsx src/**/**/*.ts src/**/**/*.tsx && tsc && jest",
    "dev": "webpack-dev-server --progress --history-api-fallback --hot --content-base build --port 8090 --config webpack.dev.config",
    "prod": "rm -rf lib && NODE_ENV=production webpack -p --progress --display-modules --config webpack.prod.config",
    "prepublish": "typings install && rm -rf lib && tsc"
  },
  "dependencies": {
    "opds-feed-parser": "^0.0.9",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^4.3.0",
    "redux": "^3.2.1",
    "redux-thunk": "^1.0.3",
    "sanitize-html": "^1.11.3",
    "xml2js": "^0.4.16"
  },
  "devDependencies": {
    "jest": "^0.1.40",
    "jest-cli": "^0.8.2",
    "json-loader": "^0.5.4",
    "react-addons-test-utils": "^0.14.6",
    "react-hot-loader": "^1.3.0",
    "ts-loader": "^0.8.0",
    "tslint": "^3.3.0",
    "typescript": "^1.8.2",
    "typings": "^0.6.6",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1"
  },
  "jest": {
    "rootDir": "./lib",
    "testRunner": "../node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js",
    "testFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "../node_modules/*"
    ]
  }
}
